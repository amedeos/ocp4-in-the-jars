$TTL  1D
@     IN  SOA dns.{{ domain }}. root.{{ domain }}. (
                2022021200 ; serial
                3h         ; refresh
                15         ; retry
                1w         ; expire
                3h         ; minimum
              )
          IN NS dns.{{ domain }}.


{{ vip.apilast }}        IN PTR api.{{ domain }}.
{{ vip.apiintlast }}        IN PTR api-int.{{ domain }}.

; bastion nodes
{% for host in bastion_nodes %}
{% if host != 'localhost' %}
{{ host.baremetal_last }}           IN PTR {{ host.name }}.{{ domain }}.
{% endif %}
{% endfor %}

; master nodes
{% for host in master_nodes %}
{% if host != 'localhost' %}
{{ host.baremetal_last }}           IN PTR {{ host.name }}.{{ domain }}.
{% endif %}
{% endfor %}

; worker nodes
{% for host in worker_nodes %}
{% if host != 'localhost' %}
{{ host.baremetal_last }}           IN PTR {{ host.name }}.{{ domain }}.
{% endif %}
{% endfor %}


56        IN PTR worker-0.{{ domain }}.
57        IN PTR worker-1.{{ domain }}.
58        IN PTR worker-2.{{ domain }}.
