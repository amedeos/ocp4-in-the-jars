$TTL  1D
@     IN  SOA dns.{{ domain }}. root.{{ domain }}. (
                2022021200 ; serial
                3h         ; refresh
                15         ; retry
                1w         ; expire
                3h         ; minimum
              )
                          IN NS dns.{{ domain }}.
{% for host in utility_nodes %}
{% if host != 'localhost' %}
dns                       IN A {{ host.baremetal_ip }}
{{ host.name }}           IN A {{ host.baremetal_ip }}
{% endif %}
{% endfor %}
api                       IN A {{ vip.api }}
api-int                   IN A {{ vip.apiint }}
*.apps                    IN A {{ vip.apps }}
; bastion nodes
{% for host in bastion_nodes %}
{% if host != 'localhost' %}
{{ host.name }}           IN A {{ host.baremetal_ip }}
{% endif %}
{% endfor %}

; master nodes
{% for host in master_nodes %}
{% if host != 'localhost' %}
{{ host.name }}           IN A {{ host.baremetal_ip }}
{% endif %}
{% endfor %}

; worker nodes
{% for host in worker_nodes %}
{% if host != 'localhost' %}
{{ host.name }}           IN A {{ host.baremetal_ip }}
{% endif %}
{% endfor %}

